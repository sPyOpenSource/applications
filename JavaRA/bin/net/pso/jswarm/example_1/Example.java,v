	public static String showVect(double v[]) {
		String str = "[";
		for( int i = 0; i < v.length; i++ ) {
			str += Double.toString(((int) (v[i] * 100)) / 100.0);
			if( i < (v.length - 1) ) str += ", ";
		}
		return str + "]";
	}
